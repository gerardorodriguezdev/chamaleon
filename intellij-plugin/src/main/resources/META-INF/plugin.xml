<idea-plugin>
    <id>com.github.gerardorodriguezdev.chamaleon</id>
    <name>Chamaleon</name>
    <vendor>gerardorodriguezdev</vendor>

    <depends>com.intellij.modules.platform</depends>

    <description>Chamaleon Intellij plugin to configure different chamaleon environments</description>

    <resource-bundle>messages.Bundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="io.github.gerardorodriguezdev.chamaleon.intellij.plugin.MainToolWindowFactory"
                id="ChamaleonWindow"
                anchor="right"/>
    </extensions>
</idea-plugin>
